<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true"
    android:layout_marginBottom="20dp"
    android:clickable="true"
    app:cardCornerRadius="@dimen/dp20"
    android:layout_marginHorizontal="@dimen/dp20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp05">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp10"
            android:elevation="10dp"
            android:layout_margin="@dimen/dp10">

            <ImageView
                android:id="@+id/wiz_room_image"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_weight="7"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp10"
            android:layout_gravity="left"
            android:layout_weight="3">

            <TextView
                android:id="@+id/wiz_room_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title placeholder"
                android:textSize="14sp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                />
            <TextView
                android:id="@+id/wiz_room_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:visibility="gone"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/wiz_room_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="@string/wiz_time_placeholder"
                android:textAppearance="?attr/textAppearanceBody2"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/wiz_room_minus_icon"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/dp05"
            app:srcCompat="@drawable/ic_baseline_remove_circle_outline_24"/>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>