<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true"
    android:layout_marginBottom="20dp"
    android:clickable="true"
    app:cardCornerRadius="@dimen/dp20"
    android:layout_marginHorizontal="@dimen/dp20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="90dp"
        android:padding="@dimen/dp05">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp10"
            android:elevation="10dp"
            android:layout_margin="@dimen/dp10">

            <ImageView
                android:id="@+id/wiz_structure_image"
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:layout_weight="7"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/dp10"
            android:layout_gravity="left"
            android:layout_weight="3">

            <TextView
                android:id="@+id/wiz_structure_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title placeholder"
                android:textSize="16sp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                />
            <TextView
                android:id="@+id/wiz_structure_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address placeholder"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBody2" />
            <TextView
                android:id="@+id/wiz_structure_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City placeholder"
                android:textSize="12sp"
                android:textAppearance="?attr/textAppearanceBody2" />

        </LinearLayout>

        <RadioButton
            android:id="@+id/wiz_structure_radio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:clickable="false"
            android:buttonTint="@color/touristcolor"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>